{
  "name": "hermes-server",
  "version": "2.0.0",
  "description": "The SMTP and API server for the Hermes Email service",
  "main": "src/index.js",
  "scripts": {
    "start": "nf start api",
    "api": "nodemon --exec babel-node src/index.js",
    "build-vscode": "rm -rf dist/ && cross-env node_modules/.bin/babel src/ --ignore=src/__mocks__ --out-dir=dist --source-maps",
    "prebuild": "del dist",
    "build": "babel src -d dist",
    "clean": "del dist logs src/logs",
    "clean:hard": "del dist node_modules",
    "test": "jest --runInBand",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  },
  "dependencies": {
    "amqp": "^0.2.6",
    "babel-jest": "^22.4.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "express-correlation-id": "^1.0.2",
    "express-list-endpoints": "^3.0.0",
    "helmet": "^3.13.0",
    "mailparser": "^2.4.3",
    "mongoose": "^4.13.6",
    "morgan": "^1.9.0",
    "smtp-server": "^3.4.7",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1",
    "winston-transport": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "cross-env": "5.1.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "foreman": "^3.0.1",
    "jest": "21.2.1",
    "jest-junit-reporter": "^1.1.0",
    "newman": "^3.8.3",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4"
  }
}
